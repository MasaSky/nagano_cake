<% if admin_signed_in? %>
<%= search_form_for @q, url: search_admin_items_path, class:"search-form" do |f| %>
<%= f.search_field :name_cont, class: "border border-white", placeholder: "検索" %>
<%= f.submit "商品検索", class:'search-button' %>
<% end %>
<% else %>
<%= search_form_for @q, url: search_items_path, class:"search-form" do |f| %>
<%= f.search_field :name_cont, class: "border border-white", placeholder: "検索" %>
<%= f.submit "検索", class:'search-button' %>
<% end %>
<% end %>