<% provide(:title, "会員一覧") %>
<div class="container">
  <div class="row mt-5">
   <div class="col-sm-12" >
    <h3 class="row mb-3">会員一覧</h3>
     <table class='table table-hover'>
      <thead>
        <tr class='table'>
        <th>会員ID</th>
         <th>氏名</th>
         <th>メールアドレス</th>
         <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
       <% @customers.each do |customer| %>
        <tr>
          <td><%=  customer.id %></td>
          <td><%= link_to "#{customer.last_name} #{customer.first_name}", admin_customer_path(customer) %></td>
          <td><%= customer.email %></td>
          <td>
           <% if customer.is_active %>
           <p class="text-success font-weight-bold">有効</p>
           <% else %>
           <P class="text-muted font-weight-bold">退会</P>
           <% end %>
           </td>
        </tr>
        <% end %>
      </tbody>
     </table>
   </div>
   <div><%= paginate @customers %></div>
  </div>
</div>