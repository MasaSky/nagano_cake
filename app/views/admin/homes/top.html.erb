<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>注文履歴一覧</h2>

      <table class='table'>
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |o| %>
            <tr>
              <td><%= link_to o.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order) %></td>
              <td><%= o.name %></td>
              <td><%= o.order_items.count %></td>
              <td><%= o.order_status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class= "d-flex justify-content-center">
        <%= paginate @orders %>
      </div>
    </div>
  </div>
</div>