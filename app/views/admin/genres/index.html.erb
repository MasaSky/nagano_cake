<% provide(:title, "ジャンル一覧・追加") %>
<div class="container">
  <div class="mt-5">
    <div class="col-sm-8">
      <h3 class="mb-3">ジャンル一覧・追加</h3>
      <div><%= render "layouts/form_error_messages", model: @genre %></div>
      <div class="mt-4">
        <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
          <%= f.label :name, 'ジャンル名' %>
          <%= f.text_field :name %>
          <%= f.submit '新規作成', class:"btn btn-sm btn-success" %>
        <% end %>
      </div>
      <div class="col-8 mt-4">
        <table class="table table-hover">
          <thead class="table-secondary">
            <tr>
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% if @genres.present? %>
              <% @genres.each do |genre| %>
              <tr>
                <td><p><%= genre.name %></p></td>
                <td class="text-center"><%= link_to '編集', edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
              </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
        <div><%= paginate @genres %></div>
      </div>
    </div>
  </div>
</div>