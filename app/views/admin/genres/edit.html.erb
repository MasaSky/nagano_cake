<% provide(:title, "ジャンル編集") %>
<div class="container">
  <div class="row mt-5">
   <div class="col-sm-8">
     <h3 class="mb-3">ジャンル編集</h3>
   </div>
   <div><%= render "layouts/form_error_messages", model: @genre %></div>
   <div class="col-12 col-md-9 col-lg-7">
      <%= form_with model: @genre, url: admin_genre_path, class: "d-flex align-items-center" do |f| %>
        <div class="pl-3"><%= f.label :name, "ジャンル名", class: "small" %></div>
        <div class="pl-5"><%= f.text_field :name, placeholder: "ジャンル名", class: "form-control" %></div>
        <div class="ml-5"><%= f.submit "変更を保存", class: "form-control btn btn-outline-success ml-5" %></div>
      <% end %>
   </div>
  </div>
</div>