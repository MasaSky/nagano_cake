<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2><%= @customer.last_name %><%= @customer.first_name %>さんの注文履歴</h2>

      <table class='table'>
        <thead>
          <tr>
            <th>購入日時</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order) %></td>
              <td><%= quantity_sum %></td>
              <td><%= order.order_status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class= "d-flex justify-content-center">
        <%= paginate @orders %>
      </div>
    </div>
  </div>
</div>