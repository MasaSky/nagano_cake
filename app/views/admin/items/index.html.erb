<div class="container">
  <div class="row">
    <div class="col-12 mx-auto">
      <h2>商品一覧</h2>
      <%= link_to new_admin_item_path, data: {"turbolinks" => false}, class: "d-flex justify-content-end" do %>
        <i class="fas fa-plus-circle fa-3x plus-button"></i>
      <% end %>

      <% unless @items.blank? %>
        <table class='table'>
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
              <tr>
                <td><%= item.id %></td>
                <td><%= link_to item.name, admin_item_path(item) %></td>
                <td><%= item.unit_price.to_s(:delimited) %></td>
                <td><%= item.genre.name %></td>
                <td>
                  <% if item.is_active == true %>
            				<p class="text-success">販売中</p>
            			<% elsif item.is_active == false %>
            				<p class="text-muted">販売停止中</p>
            			<% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>商品はありません</p>
      <% end %>

      <div class= "d-flex justify-content-center">

      </div>

    </div>
  </div>
</div>