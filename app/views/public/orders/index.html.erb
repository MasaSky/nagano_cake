<% provide(:title, "注文履歴一覧") %>
<div class="row">
  <div class="col-4"></div>
  <div class="col-4">
    <h2 class="text-center title">注文履歴一覧</h2>
  </div>
  <div class="col-4"></div>
</div>

<div calss="row">
  <div class="col-md-10 mx-auto orders-table">
    <% if @orders.present? %>
      <table class="table table-hover table-bordered table-condensed">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |o| %>
            <tr>
              <td><%= o.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              <%= o.postal_code %><br>
              <%= o.address %>
              <%= o.attention %><br>
            </td>
            <td>
              <% o.order_items.each do |oi| %>
              	<%= oi.item.name %><br>
              <% end %>
            </td>
            <td class="text-right"><%= o.grand_total.to_s(:delimited) %>円</td>
            <td><%= o.order_status %></td>
             <td><%= link_to "注文詳細", order_path(o), class: "btn btn-outline-info" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>注文履歴がありません。</p>
    <% end %>
  </div>
</div>